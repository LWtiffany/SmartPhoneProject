<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/hku_beige"
    tools:context=".ReservationActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Header Background Image with Gradient Overlay -->
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="180dp">

                <androidx.appcompat.widget.Toolbar
                    android:id="@+id/toolbar"
                    android:layout_width="match_parent"
                    android:layout_height="?attr/actionBarSize"
                    android:background="@android:color/transparent"
                    android:layout_marginTop="25dp"
                    app:navigationIcon="@drawable/ic_back"
                    android:elevation="4dp"
                    app:titleTextColor="@color/white" />

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:contentDescription="Reservation Header"
                    android:scaleType="centerCrop"
                    android:src="@drawable/header" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/header_bg_gradient" />

                <!-- Title Text -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="50dp"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/shoukesong"
                        android:shadowColor="#80000000"
                        android:shadowDx="1"
                        android:shadowDy="1"
                        android:shadowRadius="3"
                        android:text="预约参观"
                        android:textColor="@color/white"
                        android:textSize="34sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:fontFamily="monospace"
                        android:shadowColor="#80000000"
                        android:shadowDx="1"
                        android:shadowDy="1"
                        android:shadowRadius="2"
                        android:text="CAMPUS VISIT RESERVATION"
                        android:textColor="#39393A"
                        android:textSize="14sp" />
                </LinearLayout>
            </FrameLayout>

            <!-- Main Content Container with Rounded Corners -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="-30dp"
                android:layout_marginEnd="16dp"
                android:background="@drawable/card_container_gradient"
                android:orientation="vertical"
                android:paddingStart="16dp"
                android:paddingTop="16dp"
                android:paddingEnd="16dp"
                android:paddingBottom="16dp">

                <!-- Reservation Form Title -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:fontFamily="@font/shoukesong"
                    android:text="选择参观日期"
                    android:textColor="@color/text_primary"
                    android:textSize="22sp" />

                <!-- Calendar Card -->
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="0dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/white"
                        android:orientation="vertical"
                        android:padding="8dp">

                        <CalendarView
                            android:id="@+id/calendarView"
                            android:layout_width="match_parent"
                            android:layout_height="320dp"
                            android:firstDayOfWeek="2"
                            android:selectedWeekBackgroundColor="@color/hku_brown"
                            android:weekNumberColor="@color/hku_brown"
                            android:weekSeparatorLineColor="@color/hku_dark_beige" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <!-- Selected Date Info -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:fontFamily="@font/shoukesong"
                    android:text="预约信息"
                    android:textColor="@color/text_primary"
                    android:textSize="22sp" />

                <!-- Time Slots Card -->
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="0dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/white"
                        android:orientation="vertical"
                        android:padding="16dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="8dp"
                            android:fontFamily="@font/shoukesong"
                            android:text="可预约时段"
                            android:textColor="@color/text_primary"
                            android:textSize="18sp" />

                        <!-- Morning Time Slots -->
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:text="早上"
                            android:fontFamily="@font/shoukesong"
                            android:textColor="@color/text_secondary"
                            android:textSize="14sp" />

                        <Button
                            android:id="@+id/btnTimeSlot1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:backgroundTint="@color/hku_dark_beige"
                            android:text="@string/morning_slot"
                            android:textColor="@color/text_secondary"
                            android:textSize="14sp"
                            app:cornerRadius="8dp" />

                        <TextView
                            android:id="@+id/tvRemainingSlots1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:gravity="end"
                            android:text="@string/loading_slots"
                            android:textColor="@color/text_secondary"
                            android:textSize="12sp"
                            android:textStyle="italic" />

                        <!-- Afternoon Time Slots -->
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="16dp"
                            android:text="下午"
                            android:fontFamily="@font/shoukesong"
                            android:textColor="@color/text_secondary"
                            android:textSize="14sp" />

                        <Button
                            android:id="@+id/btnTimeSlot2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:backgroundTint="@color/hku_dark_beige"
                            android:text="@string/afternoon_slot"
                            android:textColor="@color/text_secondary"
                            android:textSize="14sp"
                            app:cornerRadius="8dp" />

                        <TextView
                            android:id="@+id/tvRemainingSlots2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:gravity="end"
                            android:text="@string/loading_slots"
                            android:textColor="@color/text_secondary"
                            android:textSize="12sp"
                            android:textStyle="italic" />

                        <!-- Evening Time Slots -->
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="16dp"
                            android:text="晚上"
                            android:fontFamily="@font/shoukesong"
                            android:textColor="@color/text_secondary"
                            android:textSize="14sp" />

                        <Button
                            android:id="@+id/btnTimeSlot3"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:backgroundTint="@color/hku_dark_beige"
                            android:text="@string/evening_slot"
                            android:textColor="@color/text_secondary"
                            android:textSize="14sp"
                            app:cornerRadius="8dp" />

                        <TextView
                            android:id="@+id/tvRemainingSlots3"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:gravity="end"
                            android:text="@string/loading_slots"
                            android:textColor="@color/text_secondary"
                            android:textSize="12sp"
                            android:textStyle="italic" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <!-- Submit Button -->
                <Button
                    android:id="@+id/btnSubmitReservation"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/hku_brown"
                    android:padding="12dp"
                    android:text="提交预约信息"
                    android:fontFamily="@font/shoukesong"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    app:cornerRadius="8dp" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>