<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MapNavigationActivity">

    <FrameLayout
        android:id="@+id/mapContentContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="visible">
        <!-- Map Container with enhanced 3D effect -->
        <FrameLayout
            android:id="@+id/mapContainer"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <!-- Custom Map View -->
            <hku.cs.hkutopia.CustomMapView
                android:id="@+id/customMapView"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <!-- Keep the Google Map fragment but make it invisible -->
            <fragment
                android:id="@+id/map"
                android:name="com.google.android.gms.maps.SupportMapFragment"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:visibility="gone" />

            <!-- Header with repositioned back button -->
            <LinearLayout
                android:id="@+id/headerLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:orientation="horizontal"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:paddingTop="40dp"
                android:paddingBottom="16dp">

                <ImageButton
                    android:id="@+id/btnBack"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:background="@drawable/futuristic_category_bg"
                    android:contentDescription="Back"
                    android:src="@drawable/ic_back"
                    android:elevation="4dp"
                    app:tint="@color/white" />
                <View
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight="1" />
            </LinearLayout>

            <!-- Category Navigation with futuristic styling -->
            <HorizontalScrollView
                android:id="@+id/categoryScrollView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="104dp"
                android:background="@android:color/transparent"
                android:scrollbars="none">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingHorizontal="8dp"
                    android:paddingVertical="8dp">

                    <TextView
                        android:id="@+id/categoryAll"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="8dp"
                        android:background="@drawable/category_pill_selected_bg"
                        android:fontFamily="@font/shoukesong"
                        android:paddingHorizontal="16dp"
                        android:paddingVertical="8dp"
                        android:text="全部"
                        android:textColor="@color/white"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/categoryHistorical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="8dp"
                        android:background="@drawable/category_pill_selected_bg"
                        android:fontFamily="@font/shoukesong"
                        android:paddingHorizontal="16dp"
                        android:paddingVertical="8dp"
                        android:text="历史建筑"
                        android:textColor="@color/white"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/categoryAcademic"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="8dp"
                        android:background="@drawable/category_pill_selected_bg"
                        android:fontFamily="@font/shoukesong"
                        android:paddingHorizontal="16dp"
                        android:paddingVertical="8dp"
                        android:text="教学建筑"
                        android:textColor="@color/white"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/categoryRestaurants"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="8dp"
                        android:background="@drawable/category_pill_selected_bg"
                        android:fontFamily="@font/shoukesong"
                        android:paddingHorizontal="16dp"
                        android:paddingVertical="8dp"
                        android:text="餐厅"
                        android:textColor="@color/white"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/categoryFacilities"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="8dp"
                        android:background="@drawable/category_pill_selected_bg"
                        android:paddingHorizontal="16dp"
                        android:paddingVertical="8dp"
                        android:fontFamily="@font/shoukesong"
                        android:text="校园设施"
                        android:textColor="@color/white"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/categoryGates"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="8dp"
                        android:background="@drawable/category_pill_selected_bg"
                        android:fontFamily="@font/shoukesong"
                        android:paddingHorizontal="16dp"
                        android:paddingVertical="8dp"
                        android:text="校门"
                        android:textColor="@color/white"
                        android:textSize="14sp" />
                </LinearLayout>
            </HorizontalScrollView>

            <!-- Reset View Button with futuristic design -->
            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/resetViewButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|end"
                android:layout_margin="24dp"
                android:contentDescription="Reset View"
                android:src="@drawable/ic_reset_view"
                app:backgroundTint="@color/hku_red"
                app:tint="@color/white"
                app:fabSize="normal"
                app:borderWidth="0dp"
                app:elevation="8dp" />
        </FrameLayout>
    </FrameLayout>

    <!-- Location Detail Panel (Initially Hidden) -->
    <androidx.cardview.widget.CardView
        android:id="@+id/locationDetailPanel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:visibility="gone"
        app:cardCornerRadius="16dp"
        app:cardElevation="12dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:cardBackgroundColor="#F5F5F5">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tvLocationName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Location Name"
                        android:textColor="@color/text_primary"
                        android:fontFamily="@font/shoukesong"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tvLocationDistance"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:text="Distance: 500m"
                        android:fontFamily="@font/shoukesong"
                        android:textColor="@color/text_secondary"
                        android:textSize="14sp" />
                </LinearLayout>
            </LinearLayout>

            <TextView
                android:id="@+id/tvLocationDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:maxLines="3"
                android:fontFamily="@font/shoukesong"
                android:text="Location description goes here with details about the historical significance and interesting facts about this place."
                android:textColor="@color/text_primary"
                android:textSize="15sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:orientation="horizontal">

                <!-- 导航按钮 -->
                <LinearLayout
                    android:id="@+id/btnNavigate"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:clickable="true"
                    android:focusable="true"
                    android:background="@android:color/transparent"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="12dp"
                    android:layout_marginEnd="8dp">

                    <ImageView
                        android:layout_width="28dp"
                        android:layout_height="28dp"
                        android:src="@drawable/ic_navigate"
                        app:tint="@color/marker_bg_blue" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:fontFamily="@font/shoukesong"
                        android:text="导航"
                        android:textColor="@color/text_primary"
                        android:textSize="14sp"
                        android:textStyle="bold" />
                </LinearLayout>

                <!-- 打卡按钮 -->
                <LinearLayout
                    android:id="@+id/btnCheckIn"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:clickable="true"
                    android:focusable="true"
                    android:background="@android:color/transparent"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="12dp"
                    android:layout_marginStart="8dp">

                    <ImageView
                        android:id="@+id/imgCheckIn"
                        android:layout_width="28dp"
                        android:layout_height="28dp"
                        android:src="@drawable/ic_check_in"
                        app:tint="@color/hku_red" />

                    <TextView
                        android:id="@+id/txtCheckIn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:fontFamily="@font/shoukesong"
                        android:text="打卡"
                        android:textColor="@color/text_primary"
                        android:textSize="14sp" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>