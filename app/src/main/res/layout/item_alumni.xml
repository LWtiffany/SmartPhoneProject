<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="0dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/alumniImage"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/alumni_default"
            app:civ_border_color="@color/hku_gold"
            app:civ_border_width="2dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="16dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/alumniName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/shoukesong"
                android:text="杨振宁"
                android:textColor="@color/text_primary"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/alumniDegree"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/shoukesong"
                android:text="1942年毕业于物理系"
                android:textColor="@color/text_secondary"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/alumniAchievement"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:fontFamily="@font/shoukesong"
                android:text="1957年诺贝尔物理学奖获得者，因发现宇称不守恒原理而获奖。"
                android:textColor="@color/text_primary"
                android:textSize="14sp" />
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>