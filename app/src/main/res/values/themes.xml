<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.HKUtopia" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/hku_red</item>
        <item name="colorPrimaryVariant">@color/hku_red</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/hku_gold</item>
        <item name="colorSecondaryVariant">@color/hku_gold</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/hku_beige</item>
        <item name="android:windowLightStatusBar">true</item>
        <!-- Background color -->
        <item name="android:windowBackground">@color/hku_beige</item>
